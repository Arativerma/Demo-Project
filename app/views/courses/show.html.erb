<h1><%= @course.title %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Course Videos Title</th>
      <th>Video</th>
    </tr>
  </thead>
  <tbody>
    <% @course.course_videos.each do |video| %>
      <tr>
        <td><%#= video.title %></td>
        <td><%= video_tag url_for(video), controls: true, width: "350", height: "200" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= @course.description %></p>
<p><%= @course.price %></p>

<%= button_to "Add to cart", line_items_path(:course_id => @course.id)%>
<%#= link_to 'Add to Cart', add_to_cart_carts_path(@course.id), method: :post, class: 'btn bg-turquoise' %>
<%#= link_to 'Cart', cart_path, class: 'btn bg-turquoise' %>
<%= link_to 'Purchase', purchase_course_path(@course), class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_course_path(@course), class: 'btn btn-primary' %> |
<%= link_to 'Back', courses_path, class: 'btn btn-secondary' %>
