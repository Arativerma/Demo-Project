<h1>Your Cart</h1>

<% @cart_courses.any? %>
  <table>
    <thead>
      <tr>
        <th>Course_Videos_title</th>
        <th>Price</th>
        <th>PAYMENT</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_courses.each do |cart_course| %>
        <tr>
        	<td class="total-price"><%= number_to_currency line_item.course.price %></td>
        	<%#<td class="total-price"><%= number_to_currency line_item.subtotal %>
          <td><%= cart_course.course.title %></td>
          <td><%= cart_course.course.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>Total: <%= @cart_courses.sum(&:course_price) %></p>
  <%= link_to 'Checkout', payment_create_path, class: 'btn btn-primary' %>
<% else %>
  <p>Your cart is empty.</p>
  <%= button_to 'Continue Shopping', courses_path, class: 'btn btn-secondary' %>
<% end %>

